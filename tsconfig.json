{
	"compilerOptions": {
		"target": "ES6",
		"strict": false,
		"outDir": "build",
		"jsx": "react-jsx",
		"declaration": true,
		"module": "commonjs",
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"noImplicitThis": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"lib": ["es6", "dom", "es2016", "es2017"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "lib"]
}
